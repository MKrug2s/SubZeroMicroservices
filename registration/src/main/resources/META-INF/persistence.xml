    <properties>
    
      <!-- enable these properties while you want to use network derby db  --> 
      <property name="javax.persistence.jdbc.driver"   							value="org.apache.derby.jdbc.ClientDriver" />
      <property name="javax.persistence.jdbc.url"      							value="jdbc:derby://localhost:1527/HBRS-Projekt;create=true" />

      <property name="javax.persistence.jdbc.user"     							value="user" />
      <property name="javax.persistence.jdbc.password" 							value="Test#1234!" />
	  
	  <!--
      <property name="javax.persistence.schema-generation.database.action" 		value="drop-and-create"/>
